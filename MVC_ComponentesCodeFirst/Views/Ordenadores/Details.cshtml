@using Humanizer
@model MVC_ComponentesCodeFirst.Models.Ordenador

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>@Model.NombreOrdenador</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NombreOrdenador)
        </dt>

        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NombreOrdenador)
        </dd>
        

        @foreach (var item in Model.ComponentesAgregados!)
                {
                    <dt class = "col-sm-2">
                        @Html.DisplayFor(model => item.TipoComponente)
                    </dt>

                    <dd class = "col-sm-10">
                        Tipo: @item.TipoComponente | Numero de serie: @item.NumeroDeSerie | Precio: @item.Precio € | 
                        Grados: @item.Calor ºC | Almacenamiento: @item.Almacenamiento.Megabytes()  | Cores: @item.Cores
                    </dd> 
                }
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Calor)
        </dt>

        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Calor) ºC
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Precio)
        </dt>

        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Precio) €
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
