@model IEnumerable<MVC_ComponentesCodeFirst.Models.Factura>

@{
    ViewData["Title"] = "Index";
}

<h1>Facturas Tienda</h1>

<p>
    <a asp-action="Create">Create New</a> ||
    <a asp-action="AgregaFactura">Agregar Pedido a Factura</a> ||
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NombreFactura)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Calor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Precio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PedidoFactura)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NombreFactura)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Calor) ºC
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Precio) €
            </td>
            <td>
                @foreach (var itemPedido in item.PedidoFactura!)
                {
                    @Html.DisplayFor(modelItem=>itemPedido.Pedido!.NombrePedido) <br/>
                }
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a> |
            </td>
        </tr>
}
    </tbody>
</table>
