@model IEnumerable<MVC_ComponentesCodeFirst.Models.Pedido>

@{
    ViewData["Title"] = "Index";
}

<h1>Pedidos Tienda</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NombrePedido)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Calor)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Precio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OrdenadoresAgregados)
        </th>

        <th></th>
    </tr>
    </thead>
    <tbody>
@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NombrePedido)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Calor) ºC
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Precio) €
        </td>
        <td>
            @foreach (var item1 in item.OrdenadoresAgregados!)
            {
                @Html.DisplayFor(modelItem => item1.NombreOrdenador)
                <br/>
            }
        </td>
        <td>
            <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
            <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
            <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
        </td>
    </tr>
}
    </tbody>
</table>
